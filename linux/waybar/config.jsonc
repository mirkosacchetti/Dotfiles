// -*- m ode: jsonc -*-
{
    "reload_style_on_change": true,
    "height": 28,
    "spacing": 2,
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "sway/scratchpad"
    ],
    "modules-right": [
        "wireplumber",
        "bluetooth",
        "network",
        "power-profiles-daemon",
        "battery",
        "custom/power",
        "tray",
        "clock"
    ],
    "sway/mode": {
        "format": "{}"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": ["", "Ôãí"],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "bluetooth": {
        "format": "Ôäî",
        "format-disabled": "Û∞Ç≤",
        "format-connected": "Û∞Ç∞",
        "tooltip-format": "{controller_alias}\t{controller_address}",
        "tooltip-format-connected": "{device_alias} (battery {device_battery_percentage}%)",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "on-click": "blueberry"
    },
    "tray": { },
    "clock": {
        "on-click" : "/home/m/Projects/calendar/build/deca",
        "format": "{:%Y-%m-%d %A %H:%M}",
        "locale": "it_IT.UTF-8",
        "tooltip": false
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
       	"interval": 1,
        "format": "{capacity}% {icon} ",
        "format-charging": "{capacity}%  Ôóß",
        "format-plugged": "{capacity}%  Ôá¶",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },
    "network": {
        "format-wifi": "Ôá´ ",
        "format-ethernet": "üñß",
        "tooltip-format": "{essid} ({signalStrength}%) via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "Disconnected",
        "format-alt": "{ifname} {ipaddr}/{cidr}"
    },
    "wireplumber": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "Ôö©",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ® "]
        },
        "on-click": "pavucontrol", 
        "scroll-step": 2
    },
    "custom/power": {
        "format" : "‚èª",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml",
        "menu-actions": {
            "logout": "sway exit",
            "shutdown": "systemctl poweroff",
            "reboot": "systemctl reboot",
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
    },
    "custom/pomidore": {
        "exec": "pomidore status --waybar",
        "interval": 1,
        "format": "{}",
        "return-type": "json",
        "on-click": "pomidore toggle",
        "on-click-right": "pomidore stop",
        "tooltip": true
    }
}
